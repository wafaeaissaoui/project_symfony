                            <td>Products</td>
                            <td>Color & Size</td>
                            <td>Quantity</td>
                            <td>Price</td>
                            <td></td>
                        </tr>
                        {% for item in items %}
                        <tr>
                            <td>
                                <div class="row justify-content-md-center pt-4 pb-4 align-items-center">
                                    <div class="col col-lg-3 mr-2">
                                        <img class="img-responsive" src="{{ item.product.imageArticle }}" width="90"/>
                                    </div>
                                    <div class="col-md-auto">
                                        <h2>{{ item.product.nomArticle }}</h2>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <p class="pl-3 pr-3">Size:XL</br>Color:Black</p>
                            </td>
                            <td>
                                <input type="text" class="txt-small m-4" value="{{ item.quantity }}">
                            </td>
                            <td>
                                <p class="pl-4 pr-4">${{ item.product.prix|number_format(2, '.', ',') }}</p>
                            </td>
                            <td>
                                <div class="row justify-content-md-center align-items-center"
                                    style="background-color: transparent;">
                                    <div class="col col-lg-6">
                                        ${{ item.product.prix|number_format(2, '.', ',') * item.quantity }}
                                    </div>
                                    <div class="col col-lg-6">
                                        <a href="{{ path('cart_remove', {'id': item.product.id}) }}" style="color: black;"><i class="fa fa-times-circle-o" style="font-size:20px"></i></a>
                                    </div>
                                </div>
                            </td>
                        </tr>
