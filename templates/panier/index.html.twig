    <section class="shopCart">
        <div class="container">
            <div class="coupon-voucher" hidden>
                <div class="row mb-4">
                    <div class="col-md-6 mb-3">
                        <h6>USE COUPON CODE</h6>
                        <label class="gray mt-4">Enter Your Coupon Here</label>
                        <div class="input-group mb-3">
                            <input type="text" class="form-control txt-large" placeholder="Enter your coupon here"
                                aria-label="Enter Your Coupon Here" aria-describedby="basic-addon2">
                            <div class="input-group-append">
                                <span class="input-group-text btn-large pl-5 pr-5" id="basic-addon2">APPLY</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <h6>USE GIFT VOUCHER</h6>
                        <label class="gray mt-4">Enter Your Gift Voucher Code Here</label>
                        <div class="input-group mb-3">
                            <input type="text" class="form-control txt-large"
                                placeholder="Enter your gift voucher code here"
                                aria-label="Enter Your Gift Voucher Code Here" aria-describedby="basic-addon2">
                            <div class="input-group-append">
                                <span class="input-group-text btn-large pl-5 pr-5" id="basic-addon2">APPLY</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="shipping-shopping">
                <div class="row mb-4">
                    <div class="col-md-6 mb-3" hidden>
                        <h6>SHIPPING AVAILABILITY</h6>
                        <label class="gray mt-4">Select Country</label>
                        <select class="form-control form-control-lg">
                            <option>Morocco</option>
                        </select>
                        <label class="gray mt-4">Select State</label>
                        <select class="form-control form-control-lg mb-1">
                            <option>Oujda</option>
                        </select>
                        <label class="gray mt-4">Postcode / Zip</label>
                        <input type="text" class="txt-large mb-4" placeholder="Postcode / Zip">
                        <button type="submit" class="btn btn-white mb-5" style="width: 180px;">UPDATE TOTALS</button>
                    </div>
                    <div class="col-md-12 mb-3">
                        <h6 class="mb-5">SHOPPING CART CALCULATION</h6>
                        <div class="table-bordered">
                            <div class="row pl-5 pr-5">
                                <div class="col-8">
                                    <label class="mt-4">Subtotal</label>
                                </div>
                                <div class="col-4">
                                    <h6 class="mt-4 float-right font-weight-normal">${{ total }}</h6>
                                </div>
                            </div>
                            <div class="row pl-5 pr-5">
                                <div class="col-8">
                                    <label class="mt-4">Coupon</label>
                                </div>
                                <div class="col-4">
                                    <h6 class="mt-4 float-right font-weight-normal">-$0</h6>
                                </div>
                            </div>
                            <div class="row pl-5 pr-5 mb-4">
                                <div class="col-8">
                                    <label class="mt-4">Shipping</label>
                                </div>
                                <div class="col-4">
                                    <label class="mt-4 float-right font-weight-normal">Free Shipping</label>
                                </div>
                            </div>
                            <div class="row border-top ml-0 mr-0 pl-5 pr-5 pb-3">
                                <div class="col-8">
                                    <label class="mt-4">Total</label>
                                </div>
                                <div class="col-4">
                                    <label class="mt-4 float-right font-weight-normal">${{ total }}</label>
                                </div>
                            </div>
                        </div>
                        <button type="button" class="btn-large mb-5 mt-3 float-right" style="width: 220px;"><a href="{% if app.user %}/paiement{% else %}/connexion{% endif %}" style="color: white; text-decoration: none;">PROCEED TO
                            CHECKOUT</a></button>
                    </div>
                </div>
            </div>
        </div>
    </section>
